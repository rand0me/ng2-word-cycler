{
  "name": "ng2-word-cycler",
  "version": "1.0.0",
  "description": "A simple angular2 module",
  "main": "bundles/ng2-word-cycler.umd.js",
  "module": "index.js",
  "scripts": {
    "test": "npm run build && karma start --single-run",
    "test:watch": "concurrently \"npm run build:watch\" \"npm run delayed_karma\"",
    "delayed_karma": "sleep 10 && karma start",
    "delayed_rollup": "sleep 5 && rollup --watch -c rollup.test.config.js",
    "build:watch": "rm -rf dist && concurrently \"tsc -w\" \"npm run delayed_rollup\"",
    "build": "rm -rf dist && tsc && rollup -c rollup.test.config.js",
    "build:npm": "rm -rf dist && ngc -p tsconfig.publish.es6.json && rollup -c rollup.publish.config.js",
    "postbuild:npm": "cp package.json README.md .npmignore dist/ && npm run rewrite_npm_package",
    "rewrite_npm_package": "node tools/rewrite-published-package.js",
    "e2e_test": "webdriver-manager update && npm run build_e2e && protractor",
    "push": "git push && git push --tags",
    "version": "conventional-changelog -i CHANGELOG.md -s -r 0 && git add CHANGELOG.md",
    "postversion": "npm run push && npm run build:npm"
  },
  "keywords": [
    "angular2",
    "angular",
    "ng2"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rand0me/ng2-word-cycler.git"
  },
  "author": "rand0me",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/rand0me/ng2-word-cycler/issues"
  },
  "homepage": "https://github.com/rand0me/ng2-word-cycler/#readme",
  "dependencies": {
    "@angular/common": "^6.0.7",
    "@angular/compiler": "^6.0.7",
    "@angular/compiler-cli": "^6.0.7",
    "@angular/core": "^6.0.7",
    "@angular/platform-browser": "^6.0.7",
    "@angular/platform-browser-dynamic": "^6.0.7",
    "@angular/platform-server": "^6.0.7",
    "@types/jasmine": "^2.5.36",
    "rxjs": "^6.2.1",
    "typescript": "^2.0.2"
  },
  "devDependencies": {
    "concurrently": "^3.6.0",
    "conventional-changelog-cli": "^2.0.1",
    "es6-module-loader": "^0.17.10",
    "es6-shim": "^0.35.0",
    "gulp": "^3.9.0",
    "gulp-jasmine": "^4.0.0",
    "gulp-typescript": "^4.0.2",
    "http-server": "^0.11.1",
    "jasmine": "^3.1.0",
    "jasmine-core": "^3.1.0",
    "karma": "^2.0.4",
    "karma-chrome-launcher": "^2.2.0",
    "karma-firefox-launcher": "^1.1.0",
    "karma-jasmine": "^1.1.2",
    "karma-mocha-reporter": "^2.0.2",
    "karma-systemjs": "^0.16.0",
    "ncp": "^2.0.0",
    "parse5": "^5.0.0",
    "protractor": "5.3.2",
    "reflect-metadata": "0.1.12",
    "rimraf": "^2.5.4",
    "rollup": "^0.62.0",
    "rollup-watch": "^4.3.1",
    "systemjs": "^0.21.4",
    "systemjs-builder": "^0.16.13",
    "traceur": "0.0.111",
    "tsd": "^0.6.5",
    "typedoc": "github:jeffbcross/typedoc",
    "typescript": "^2.0.2",
    "typings": "^2.1.1",
    "zone.js": "^0.8.26"
  },
  "typings": "index.d.ts"
}
